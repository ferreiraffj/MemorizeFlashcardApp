<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F4F7"
    tools:context=".view.ProfileActivity">

    <!-- Toolbar no topo da tela -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbarWhiteBg">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_profile"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Perfil"
            app:navigationIcon="@drawable/ic_arrow_back"/>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Conteúdo principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- CONTAINER 1: INFORMAÇÕES DO USUÁRIO -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/DashboardCardTitle"
                    android:text="Nome de Usuário" />

                <TextView
                    android:id="@+id/tv_profile_name"
                    style="@style/DashboardCardValue"
                    android:textSize="20sp"
                    tools:text="Nome do Usuário" />

                <TextView
                    style="@style/DashboardCardTitle"
                    android:layout_marginTop="16dp"
                    android:text="E-mail" />

                <TextView
                    android:id="@+id/tv_profile_email"
                    style="@style/DashboardCardValue"
                    android:textSize="16sp"
                    tools:text="usuario@email.com" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- CONTAINER 2: AÇÕES DE DADOS -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gerenciamento de Dados"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <!-- Botão de Importar -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_import"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:backgroundTint="@color/blueStripe"
                    android:text="Importar Baralhos" /> <!-- Crie este ícone -->

                <!-- Botão de Exportar -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_export"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Exportar Baralhos"
                    android:textColor="@color/blueStripe"
                    app:icon="@drawable/ic_export"
                    app:iconTint="@color/blueStripe"/> <!-- Crie este ícone -->

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>
